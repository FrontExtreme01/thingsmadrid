---
const { title, imgSrc } = Astro.props;
---

<section
    class="bg-gray-900 bg-cover bg-center"
    style={`background-image: url(${imgSrc}); background-size: cover; background-repeat: no-repeat;`}
>
    <div
        class="bg-overlay grid max-w-screen-xl px-4 py-20 mx-auto lg:gap-8 xl:gap-0 lg:py-40 lg:grid-cols-12"
    >
        <div class="mr-auto place-self-center lg:col-span-7">
            <h1
                class="max-w-2xl mb-4 text-4xl font-extrabold tracking-tight leading-none md:text-5xl xl:text-6xl text-white"
            >
                {title}
            </h1>
        </div>
    </div>
</section>
