---
import { Image } from "astro:assets";
import logo from "@/img/logos/logo-horizontal.webp";
import LanguageSelector from "./LanguageSelector.astro";

import { getI18N } from "@/i18n"
import { getLangFromUrl, useTranslations, useTranslatedPath, } from '@/i18n/utils';

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

const navigation = [
  {
    title: t("nav.tours"),
    link: translatePath('/tours'),
  },
  {
    title: t("nav.rest"),
    link: translatePath('/restaurantes'),
  },
  { title: "blog", link: "https://thingstodoinmadrid.com/blog/" },
  {
    title: t("nav.contact"),
    link: translatePath('/contacto'),
  },
];
---

<header class="bg-white sticky top-0 z-20 shadow-md">
  <!-- Desktop -->
  <nav
    class="mx-auto flex max-w-7xl items-center justify-between p-2 lg:px-8"
    aria-label="Global"
  >
    <div class="flex lg:flex-1">
      <a
        href={translatePath('/')}
        aria-label={i18n.ACCESSIBILITY.GO_TO_HOME}
        class="-m-1.5 p-1.5"
      >
        <span class="sr-only">Things to do in Madrid</span>
        <Image
          src={logo}
          alt="logo things to do in madrid"
          class="h-24 w-auto"
          widths={[240, 500, 720, logo.width]}
          sizes={`(max-width: 360px) 240px, (max-width: 720px) 500px, (max-width: 1600px) 720px,  ${logo.width}px`}
        />
      </a>
    </div>
    <div class="flex lg:hidden">
      <button
        type="button"
        class="ml-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700 navbarMobile"
      >
        <span class="sr-only">Open main menu</span>
        <i class="at-justify size-6"></i>
      </button>
    </div>
    <div class="hidden lg:flex lg:gap-x-12">
      {
        navigation.map((nav) => (
          <a
            href={nav.link}
            class="text-lg hover:text-red-700 uppercase font-bold leading-6 text-gray-600"
          >
            {nav.title}
          </a>
        ))
      }
    </div>
    <div class="hidden lg:flex lg:flex-1 lg:justify-end">
      <a
        href="tel:+34672246803"
        aria-label={i18n.ACCESSIBILITY.CALL_US}
        class="rounded-3xl text-base py-3 px-5 font-bold leading-6 bg-red-700 hover:bg-amber-400 text-white uppercase"
      >
        <i class="at-call-arrow-up-right"></i>
        {i18n.ACCESSIBILITY.CALL_US}
      </a>
      <LanguageSelector />
    </div>
  </nav>

  <!-- Mobile -->
  <nav class="flex flex-column relative">
    <div
      class="fixed top-0 left-0 bg-sky-900/[.80] w-full h-full z-[100] overlayMobile"
    >
    </div>
    <div class="menuMobile z-[110]">
      <span
        class="btnClose absolute top-5 right-2 z-[120] bg-red-700 transition duration-400 cursor-pointer hover:bg-red-600 text-white rounded-full w-9 h-9 grid place-items-center"
        ><i class="at-xmark-circle"></i></span
      >
      <div class="bg-white h-full py-10 px-5">
        <a
          href={translatePath('/')}
          aria-label={i18n.ACCESSIBILITY.GO_TO_HOME}
        >
          <Image
            src={logo}
            alt="logo things to do in madrid"
            class="h-auto w-auto mb-5"
            widths={[240, 500, 720, logo.width]}
            sizes={`(max-width: 360px) 240px, (max-width: 720px) 500px, (max-width: 1600px) 720px,  ${logo.width}px`}
          />
        </a>
        <div class="flex flex-col space-y-5">
          {
            navigation.map((nav) => (
              <a
                href={nav.link}
                class="text-lg hover:text-red-700 uppercase font-extrabold leading-6 text-gray-600"
              >
                {nav.title}
              </a>
            ))
          }
        </div>
        <LanguageSelector />
      </div>
    </div>
  </nav>
</header>
