---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getI18N } from "@/i18n";
import Hero from "../Hero.astro";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const seoMetaDatos = {
    title: i18n.SEO.CONTACT_PAGE.TITLE,
    description: i18n.SEO.CONTACT_PAGE.DESCRIPTION,
};
---

<BaseLayout seo={seoMetaDatos}>
    <Hero
        gradientBg="rgba(0,74,124,0.0),rgba(0,74,124,0.0)"
        title={i18n.CONTACT_PAGE.TITLE_BANNER}
        imgSrc="/assets/backgrounds/things-to-do-in-madrid-contact-us.webp"
    />

    <section class="container mx-auto flex justify-center text-center my-16">
        <div class="flex flex-wrap w-full items-center">
            <div class="w-full md:w-1/2 px-4">
                <h2 class="text-4xl font-bold text-left mb-6">
                    {i18n.CONTACT_PAGE.TITLE_FORM}
                </h2>
                <p class="text-lg text-left mb-6">
                    {i18n.CONTACT_PAGE.DESCRIPTION}
                </p>
                <form
                    class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 text-left flex flex-wrap"
                >
                    <div class="w-full mb-6 px-2">
                        <label
                            class="block text-gray-700 text-sm font-bold mb-2"
                            for="name"
                        >
                            {i18n.CONTACT_PAGE.FORM.LABELS.NAME}
                        </label>
                        <input
                            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                            id="name"
                            type="text"
                            placeholder={i18n.CONTACT_PAGE.FORM.PLACEHOLDERS.NAME}
                        />
                    </div>
                    <div class="w-full md:w-1/2 mb-6 px-2">
                        <label
                            class="block text-gray-700 text-sm font-bold mb-2"
                            for="phone"
                        >
                            {i18n.CONTACT_PAGE.FORM.LABELS.PHONE}
                        </label>
                        <input
                            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                            id="phone"
                            type="text"
                            placeholder={i18n.CONTACT_PAGE.FORM.PLACEHOLDERS.PHONE}
                        />
                    </div>
                    <div class="w-full md:w-1/2 mb-6 px-2">
                        <label
                            class="block text-gray-700 text-sm font-bold mb-2"
                            for="email"
                        >
                            {i18n.CONTACT_PAGE.FORM.LABELS.EMAIL}
                        </label>
                        <input
                            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                            id="email"
                            type="email"
                            placeholder={i18n.CONTACT_PAGE.FORM.PLACEHOLDERS.EMAIL}
                        />
                    </div>
                    <div class="w-full mb-10 px-2">
                        <label
                            class="block text-gray-700 text-sm font-bold mb-2"
                            for="message"
                        >
                            {i18n.CONTACT_PAGE.FORM.LABELS.MESSAGE}
                        </label>
                        <textarea
                            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                            id="message"
                            placeholder={i18n.CONTACT_PAGE.FORM.PLACEHOLDERS.MESSAGE}
                        ></textarea>
                    </div>
                    <div class="mx-auto flex items-center justify-between">
                        <button
                            class="bg-amber-400 hover:bg-amber-500 text-white font-bold py-3 px-10 rounded-lg focus:outline-none focus:shadow-outline"
                            type="button"
                        >
                            {i18n.CONTACT_PAGE.FORM.BUTTON}
                        </button>
                    </div>
                </form>
            </div>
            <div class="w-full md:w-1/2 px-4">
                <iframe
                    class="shadow-md"
                    src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d388707.22220483003!2d-3.6906530000000006!3d40.435977!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd422985069773bf%3A0xe2ece3bdd86e7a12!2sThings%20to%20do%20in%20Madrid!5e0!3m2!1ses-419!2sus!4v1705518853738!5m2!1ses-419!2sus"
                    width="100%"
                    height="450"
                    loading="lazy"
                    frameborder="0"
                    style="border:0;"
                    allowfullscreen=""
                    aria-hidden="false"
                    tabindex="0"
                >
                </iframe>
            </div>
        </div>
    </section>
</BaseLayout>
