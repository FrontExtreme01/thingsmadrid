---
const { tour } = Astro.props;
---

<div class="w-full lg:w-3/12 px-2 md:w-6/12 px-5 py-5">
    <div class="box">
        <div class="boxImg">
            <span class="starsTour"><i class="fa-solid fa-star"></i>{tour.data.stars}</span>
            {tour.data.featured != "" ? (<span class="featured">{tour.data.featured}</span>) : ""}
            <a aria-label="go to activity details" href={`/tours/${tour.slug}/`}>
                <img width="650" height="450" loading="lazy" src={tour.data.image.url} class="w-full h-full object-cover" alt={tour.data.image.alt}>
            </a>
        </div>
        <div class="box2">
            <h3 class="title-dinner">{tour.data.title}</h3>
            <p>{tour.data.description}</p>
            <div class="flex justify-around gap-5 mb-5 mt-5">
                <div class="flex items-center gap-2">
                    <i class="fa-solid fa-comments" style="color: #004a7c;"></i> 
                    <span class="text-sm">{tour.data.reviews} reviews</span>
                </div>
                <div class="flex items-center gap-2">
                    <span class="text-sm text-gray-500">From:</span>
                    <strong class="text-2xl" style="color: #004a7c;">${tour.data.price} â‚¬</strong>
                </div>
            </div>
        </div>
        
        <div class="flex justify-evenly mb-5">
            <a aria-label="book now" href={tour.data.bokun} class="btn-buy" target="_blank">Book Now</a>
            <a aria-label="more information" href={`/tours/${tour.slug}/`} class="btn-read">See all tour</a>
        </div>
    </div>
</div>