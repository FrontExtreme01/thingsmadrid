---
const { tour } = Astro.props;
---

<div class="w-full lg:w-3/12 px-2 md:w-6/12 px-5 py-5">
    <div class="box">
        <div class="boxImg">
            <span class="starsTour"><i class="fa-solid fa-star"></i>{tour.stars}</span>
            {tour.featured != "" ? (<span class="featured">{tour.featured}</span>) : ""}
            <a aria-label="go to activity details" href={"tours/"+tour.url} target="_blank">
                <img width="650" height="450" decoding="async" loading="lazy"  src={tour.img} class="w-full h-full object-cover" alt={tour.name}>
            </a>
        </div>
        <div class="box2">
            <h3 class="title-dinner">{tour.name}</h3>
            <p>{tour.description}</p>
            <div class="flex justify-around gap-5 mb-5 mt-5">
                <div class="flex items-center gap-2">
                    <i class="fa-solid fa-comments" style="color: #004a7c;"></i> 
                    <span class="text-sm">{tour.reviews} reviews</span>
                </div>
                <div class="flex items-center gap-2">
                    <label class="text-sm text-gray-500">From:</label>
                    <strong class="text-2xl" style="color: #004a7c;">${tour.price} â‚¬</strong>
                </div>
            </div>
        </div>
        
        <div class="flex justify-evenly mb-5">
            <a aria-label="book now" href={tour.bokun} class="btn-buy" target="_blank">Book Now</a>
            <a aria-label="more information" href={"tours/"+tour.url} class="btn-read">See all tour</a>
        </div>
    </div>
</div>