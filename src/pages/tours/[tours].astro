---
// [url].astro
import { useParams } from "astro";
const params = useParams();

// Cargar JSON
const response = await fetch("/path/to/tours.json");
const tours = await response.json();

// Encontrar el tour basado en la URL
const tour = tours.find((item: any) => item.url === params.url);

if (!tour) {
    throw new Error("Tour no encontrado");
}
---

<h1>{tour.title}</h1>
<img src={tour.image} alt={tour.title} />
<p>Duraci√≥n: {tour.duration}</p>
<p>Precio: ${tour.price}</p>
