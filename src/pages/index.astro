---
import Intro from "../components/home/Intro.astro";
import Partners from "../components/home/Partners";
import SliderHome from "../components/home/SliderHome";
import Testimonials from "../components/home/Testimonials";
import BaseLayout from "../layout/BaseLayout.astro";

const seo = {
	title: "Simple Blog | A template by Little Sticks",
	description: "A simple blog template for Astro by Little Sticks",
};

import { Image } from 'astro:assets';

import img1 from '../img/home/slider/amazonia-adventure-park-near-madrid-zipline.webp'
import img2 from '../img/home/slider/atletico-de-madrid-stadium-and-museum-tour.webp'
import img3 from '../img/home/slider/chambao-madrid-best-restaurant-to-eat-spanish-cuisine.webp'
import img4 from '../img/home/slider/iberian-ham-and-wine-tasting-in-madrid-tours-and-activities.webp'

const slides = [
    { id: 1, img: img1, title: "amazonia adventure", carga: "" },
    { id: 2, img: img2, title: "atletico madrid", carga: "lazy" },
    { id: 3, img: img3, title: "chambao restaurant", carga: "lazy" },
    { id: 3, img: img4, title: "iberian ham", carga: "lazy" }
]
---

<BaseLayout seo={seo}>
	<SliderHome client:idle slides={slides} />
	<Intro />
	<Testimonials client:visible />
	<Partners client:visible />
</BaseLayout>
