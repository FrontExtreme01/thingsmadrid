---
import BaseLayout from "./BaseLayout.astro";
import logo from "../../public/favicon.webp";
const { frontmatter } = Astro.props;
---

<BaseLayout>
    <section class="mx-7 md:mx-20 lg:mx-24 my-14">
        <div class="flex flex-wrap">
            <!-- Details -->
            <div class="w-full lg:w-8/12 md:px-5 lg:px-10">
                <header class="w-full">
                    <h1 class="text-3xl md:text-6xl font-bold italic text-sky-900">
                        {frontmatter.title}
                    </h1>
                    <ul class="flex gap-5 w-full my-6 text-base md:text-lg">
                        <li>
                            <i class="fa-solid fa-location-dot text-sky-900"></i>
                            <span>{frontmatter.location}</span>
                        </li>
                        <li>
                            <i class="fa-solid fa-star text-yellow-500"></i>
                            <span class="font-bold">{frontmatter.stars} <span class="text-slate-400 font-thin">({frontmatter.reviews})</span></span>
                        </li>
                    </ul>
                </header>
                <slot />
                <h3 class="text-4xl font-bold my-5">Characteristics</h3>
                <div class="flex flex-wrap mb-20">
                    <div class="w-full md:w-4/12 px-5">
                        <ul class="space-y-7">
                            <li class="flex items-center"><i class="bg-slate-100 text-black text-xl w-14 h-14 rounded-full flex justify-center items-center mr-2 fa-solid fa-clock-rotate-left"></i>{frontmatter.duration}</li>
                            <li class="flex items-center"><i class="bg-slate-100 text-black text-xl w-14 h-14 rounded-full flex justify-center items-center mr-2 fa-regular fa-clock"></i>{frontmatter.schedule}</li>
                            <li class="flex items-center"><i class="bg-slate-100 text-black text-xl w-14 h-14 rounded-full flex justify-center items-center mr-2 fa-regular fa-calendar"></i>{frontmatter.availability}</li>
                        </ul>
                    </div>
                    <div class="w-full md:w-4/12 px-5">   
                        <ul class="space-y-7">
                            <li class="flex items-center"><i class="bg-slate-100 text-black text-xl w-14 h-14 rounded-full flex justify-center items-center mr-2 fa-solid fa-language"></i>{frontmatter.offered}</li>
                            <li class="flex items-center"><i class="bg-slate-100 text-black text-xl w-14 h-14 rounded-full flex justify-center items-center mr-2 fa-solid fa-sack-xmark"></i>{frontmatter.cancelation}</li>
                            <li class="flex items-center"><i class="bg-slate-100 text-black text-xl w-14 h-14 rounded-full flex justify-center items-center mr-2 fa-solid fa-location-dot"></i>{frontmatter.location}</li>
                        </ul>
                    </div>
                    <div class="w-full md:w-4/12 px-5">   
                        <ul class="space-y-7">
                            <li class="flex items-center"><i class="bg-slate-100 text-black text-xl w-14 h-14 rounded-full flex justify-center items-center mr-2 fa-regular fa-comments"></i>{frontmatter.reviews}</li>
                            <li class="flex items-center"><i class="bg-slate-100 text-black text-xl w-14 h-14 rounded-full flex justify-center items-center mr-2 fa-solid fa-exclamation"></i>{frontmatter.difficulty}</li>
                            <li class="flex items-center"><i class="bg-slate-100 text-black text-xl w-14 h-14 rounded-full flex justify-center items-center mr-2 fa-solid fa-street-view"></i>{frontmatter.meetingPoint}</li>
                        </ul>
                    </div>
                </div>

                <h3 class="text-4xl font-bold my-5">Location</h3>
                <div class="w-full h-96">
                    <iframe class="w-full h-full rounded-2xl" src={frontmatter.mapFrame} allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
            <!-- Form -->

            
            <div class="w-full lg:w-4/12">
                <div class="w-full h-full p-10 shadow-md rounded-2xl">
                    <div class="flex justify-between flex-wrap space-y-5 md:space-y-0 mb-10">
                        <div class="w-full md:w-8/12">
                            <p class="text-slate-400 font-semibold text-md">Price</p>
                            <p class="text-6xl font-bold text-sky-900">${frontmatter.price}<span class="text-xl font-thin text-slate-400">â‚¬ per person</span></p>
                        </div>
                        <img class="rounded-full h-20 w-20 object-cover" src={logo.src} alt="">
                    </div>
                    <div class="bokunWidget" data-src={frontmatter.calendar}></div>
                </div>
            </div>
        </div>
    </section>
    <script
        type="text/javascript"
        src="https://widgets.bokun.io/assets/javascripts/apps/build/BokunWidgetsLoader.js?bookingChannelUUID=6b1de543-f859-42f0-8332-446d14d349f4"
        async></script>
</BaseLayout>
